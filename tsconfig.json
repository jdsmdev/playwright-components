{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noLib": false,
    "outDir": "./lib",
    "removeComments": false,
    "sourceMap": true,
    "target": "es6",
    "lib": ["DOM", "es6"]
  },
  "include": ["./src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
